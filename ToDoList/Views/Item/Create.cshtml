<div class="row">
    <div class="col-12 mb-3">
        <h1><a href=""><i class="bi bi-arrow-left"></i></a> Create New To-Do Item</h1>
    </div>
</div>

<div class="row">
    <form id="todoForm" action="/Item/Create" method="post">
        <div class="mb-3">
            <label for="exampleItemName" class="form-label">Your Name</label>
            <input type="text" class="form-control" id="exampleItemName" name="name" required>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

<script>
    document.getElementById('todoForm').addEventListener('submit', function (event) {
        event.preventDefault();
        window.location.href = '/Item/Index'; 
    });
</script>
